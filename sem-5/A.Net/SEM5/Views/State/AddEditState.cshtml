@model StateModel

<div class="pagetitle">
    <h1>Add State</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item">State</li>
            <li class="breadcrumb-item active">Add State</li>
        </ol>
    </nav>
</div>

<section class="section">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Add State</h5>

            <form method="post" asp-controller="State" asp-action="StateSave">

                <div class="row mb-3" hidden>
                    <label for="inputText" class="col-sm-3 col-form-label"><span class="text-danger fs-5">*</span> State ID:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="StateID">
                        <span asp-validation-for="StateID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-3 col-form-label"><span class="text-danger fs-5">*</span> State Name:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="StateName" autofocus>
                        <span asp-validation-for="StateName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-3 col-form-label"><span class="text-danger fs-5">*</span> State Code:</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" asp-for="StateCode">
                        <span asp-validation-for="StateCode" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label for="inputText" class="col-sm-3 col-form-label"><span class="text-danger fs-5">*</span> Country:</label>
                    <div class="col-sm-9">
                        <select class="form-control" asp-for="CountryID" asp-items="@( new SelectList( ViewBag.CountryList, "CountryID", "CountryName" ) )">
                            <option selected> Select Country </option>
                        </select>
                        <span asp-validation-for="CountryID" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-sm-3"></div>
                    <div class="col-sm-9">
                        <button class="btn btn-success" type="submit">Save</button>
                        <a class="btn btn-danger" asp-controller="State" asp-action="StateList">Cancel</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</section>
